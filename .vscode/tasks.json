{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build all",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-g",
                "-o",
                "main.exe",
                "main.c"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "del",
            "args": [
                "main.exe"
            ],
            "group": "build",
            "problemMatcher": []
        }
    ]
} 